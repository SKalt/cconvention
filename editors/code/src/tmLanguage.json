{
  "scopeName": "source.git-commit",
  "patterns": [
    {
      "name": "markup.heading",
      "begin": "\\A",
      "end": "$"
    },
    {
      "name": "comment",
      "begin": "^#",
      "end": "$"
    },
    {
      "name": "md_content",
      "begin": "(^|\\\\G)(?!#)",
      "while": "(^|\\\\G)(?!#)",
      "end": "(^#|\\Z)",
      "contentName": "meta.embedded.inline.markdown",
      "patterns": [
        {
          "include": "text.html.markdown"
        }
      ]
    },
    {
      "name": "commit",
      "match": "[a-f0-9]{7,50}",
      "comment": "Any lowercase hex digit sequence of over 7-50 digits."
    },
    {
      "name": "issue",
      "match": "#\\d+"
    },
    {
      "name": "mention",
      "match": "@[a-zA-Z0-9-]+"
    },
    {
      "name": "trailer-start",
      "match": "^[a-zA-Z-]+[ ]*[:\\uff1a] "
    },
    {
      "name": "breaking-change",
      "match": "BREAKING CHANGE"
    }
  ]
}
