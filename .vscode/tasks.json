{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cargo",
      "command": "build",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "label": "Build Basic Server"
    },
    {
      "label": "Build Basic Extension in Background",
      "group": "build",
      "type": "npm",
      "script": "watch",
      "path": "editors/code/basic",
      "problemMatcher": {
        "base": "$tsc-watch",
        "fileLocation": ["relative", "${workspaceFolder}/editors/code/basic"]
      },
      "isBackground": true
    },
    {
      "label": "Build Basic Extension",
      "group": "build",
      "type": "npm",
      "script": "build",
      "path": "editors/code/basic",
      "problemMatcher": {
        "base": "$tsc",
        "fileLocation": ["relative", "${workspaceFolder}/editors/code/basic"]
      }
    },
    {
      "label": "Build Basic Server and Extension",
      "dependsOn": ["Build Basic Server", "Build Basic Extension"],
      "problemMatcher": "$rustc"
    }
  ]
}
